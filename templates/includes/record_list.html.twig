{% for record in records%}
{# @var record \App\Entity\Record#}



<div class="box">
    <article class="media">
        <div class="media-left">
            <figure class="image is-128x128">
                <img src="https://loremflickr.com/256/256/album,music/all?lock={{ record.id }}" alt="Image">
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                <p>
                    <a href="#" class="has-text-primary">
                        <strong>{{ record.title }}</strong>
                    </a>
                    <small>{{ record.releaseAt|date('d/m/y')}}</small>
                    <br>
                    <small>
                        <strong>{{ record.artist.name}}:</strong>
                        <a href="#">Nom Artiste</a>
                    </small><br>
                    <small>
                        <strong>Label:</strong>
                        {% if record.label %}
                        <a href="#">{{ record.label.name }}</a>
                    {% else  %} autoproduction
                        {% endif  %}
                    </small><br>
                    {{record.description}}
                </p>
            </div>
        </div>
    </article>
</div>

{% endfor %}